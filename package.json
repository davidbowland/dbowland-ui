{
  "name": "dbowland-gatsby",
  "version": "1.0.1",
  "private": true,
  "description": "dbowland.com gatsbyjs project",
  "author": "David Bowland",
  "engines": {
    "node": "^16.0.0"
  },
  "keywords": [
    "gatsby",
    "dbowland.com"
  ],
  "license": "ISC",
  "scripts": {
    "build": "gatsby build",
    "build:master": "git checkout master && git pull --ff-only && npm run build",
    "clean": "gatsby clean",
    "deploy": "npm version $npm_config_type -m \"$npm_config_type version %s\"",
    "lint": "prettier --write . && eslint --fix .",
    "preversion": "npm run build:master",
    "postversion": "node deploy/index.js && git push --no-verify",
    "start": "gatsby develop",
    "serve": "gatsby serve",
    "test": "jest --colors --collectCoverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "eslint --fix && jest --colors --collectCoverage"
    }
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "prettier --write --ignore-unknown",
      "eslint --fix",
      "jest --colors --collectCoverage --findRelatedTests"
    ],
    "**/*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "dependencies": {
    "@fontsource/fira-code": "^4.2.2",
    "@fontsource/lato": "^4.2.2",
    "@fontsource/rokkitt": "^4.2.2",
    "@mdx-js/mdx": "^1.6.22",
    "@mdx-js/react": "^1.6.22",
    "babel-plugin-styled-components": "^1.12.0",
    "gatsby": "^3.3.1",
    "gatsby-plugin-htaccess": "^1.4.0",
    "gatsby-plugin-image": "^1.3.1",
    "gatsby-plugin-mdx": "^2.3.0",
    "gatsby-plugin-react-helmet": "^4.4.0",
    "gatsby-plugin-sass": "^4.3.0",
    "gatsby-plugin-sharp": "^3.3.1",
    "gatsby-plugin-sitemap": "^3.3.0",
    "gatsby-plugin-styled-components": "^4.4.0",
    "gatsby-source-filesystem": "^3.3.0",
    "gatsby-transformer-sharp": "^3.3.0",
    "normalize.css": "^8.0.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-helmet": "^6.1.0",
    "sass": "^1.32.11",
    "styled-components": "^5.2.3",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@types/react-helmet": "^6.1.1",
    "@types/styled-components": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-react": "^7.23.2",
    "gatsby-plugin-alias-imports": "^1.0.5",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "2.2.1",
    "ssh2": "^0.8.9"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 80
      }
    }
  }
}
